# ========================================
# VARIABLES DE ENTORNO - PARKING API
# ========================================
# Copia este archivo a .env y configura los valores según tu entorno

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================
APP_ENVIRONMENT=development
APP_NAME=parking-api
APP_VERSION=1.0.0
APP_TIMEZONE=America/Bogota
APP_LOCALE=es_CO

# ========================================
# CONFIGURACIÓN DE SPRING
# ========================================
SPRING_PROFILES_ACTIVE=dev
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5434/parking
SPRING_DATASOURCE_USERNAME=admin
SPRING_DATASOURCE_PASSWORD=12345678

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
DB_URL=jdbc:postgresql://localhost:5434/parking
DB_USERNAME=admin
DB_PASSWORD=12345678
DB_DRIVER=org.postgresql.Driver
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000

# ========================================
# CONFIGURACIÓN DE SEGURIDAD JWT
# ========================================
JWT_SECRET=ZmQ0ZGI5NjQ0MDQwY2I4MjMxY2Y3ZmI3MjdhN2ZmYTA=
JWT_EXPIRATION=21600000
JWT_ALGORITHM=HS256
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================
EMAIL_USERNAME=tu-email@gmail.com
EMAIL_PASSWORD=tu-password-de-aplicacion
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# ========================================
# CONFIGURACIÓN DE SCHEDULING
# ========================================
TOKEN_CLEANUP_CRON=0 0 2 * * ?

# ========================================
# CONFIGURACIÓN DE SERVIDOR
# ========================================
SERVER_PORT=8080

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL_COM_NELUMBO_PARKING=INFO
LOG_LEVEL_SPRING_SECURITY=DEBUG

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================
CACHE_MAX_SIZE=500
CACHE_EXPIRE_AFTER_WRITE=600

# ========================================
# CONFIGURACIÓN DE PARKING
# ========================================
PARKING_MAX_CAPACITY=100
PARKING_HOURLY_RATE=5000
PARKING_DAILY_RATE=50000
PARKING_CURRENCY=COP

# ========================================
# CONFIGURACIÓN DE REPORTES
# ========================================
REPORT_MAX_DAYS_RANGE=365
REPORT_DEFAULT_FORMAT=PDF
REPORT_ENABLE_EXPORT=true

# ========================================
# CONFIGURACIÓN DE ACTUATOR
# ========================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,env
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# ========================================
# CONFIGURACIÓN ESPECÍFICA POR PERFIL
# ========================================

# DESARROLLO (dev)
# APP_ENVIRONMENT=development
# SPRING_PROFILES_ACTIVE=dev

# PRODUCCIÓN (prod)
# APP_ENVIRONMENT=production
# SPRING_PROFILES_ACTIVE=prod
# APP_DEBUG=false

# TESTING (test)
# APP_ENVIRONMENT=testing
# SPRING_PROFILES_ACTIVE=test
# APP_DEBUG=true

# ========================================
# NOTAS IMPORTANTES
# ========================================
# 1. NUNCA comitees archivos .env con credenciales reales
# 2. Usa diferentes valores para desarrollo, testing y producción
# 3. Las variables de entorno tienen prioridad sobre application.properties
# 4. Para producción, usa credenciales seguras y no las valores por defecto
# 5. El archivo .env debe estar en .gitignore
